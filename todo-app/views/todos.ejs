<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <link rel="stylesheet" href="./css/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>To-Do Manager</title>
    <style>
        /* Add your custom styles here */
        body {
            background-color: #f0f4f8;
            font-family: 'Arial', sans-serif;
            color: #2d3748;
        }

        /* Customize the header style */
        header {
            background-color: #2a4365;
            color: #ffffff;
            padding: 1rem;
            text-align: center;
        }

        /* Add your custom styles for the sign-out link */
        a[href="/signout"] {
            color: #2a4365;
            text-decoration: underline;
            margin-bottom: 1rem;
            display: inline-block;
        }

        /* Customize the form styles */
        form {
            margin-bottom: 1rem;
        }

        input[type="text"],
        input[type="date"] {
            border: 1px solid #e2e8f0;
            padding: 0.5rem;
            border-radius: 0.25rem;
            margin-right: 0.5rem;
        }

        button[type="submit"] {
            background-color: #48bb78;
            color: #ffffff;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            cursor: pointer;
        }

        /* Customize the Todo container styles */
        .Todo-Item {
            background-color: #ffffff;
            border: 1px solid #e2e8f0;
            border-radius: 0.25rem;
            margin-bottom: 0.5rem;
            padding: 0.75rem;
        }

        input[type="checkbox"] {
            margin-right: 0.5rem;
        }

        .trash-icon {
            color: #e53e3e;
            cursor: pointer;
        }

        /* Add your custom styles for the error messages */
        li {
            color: #e53e3e;
            list-style-type: none;
        }
    </style>
    <script>
        var token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");

        function updateTodo(id, status){
            fetch(`/todos/${id}`,{
                method:"put",
                headers:{"Content-Type":"application/json"},
                body: JSON.stringify({
                    completed: status,
                    "_csrf": token
                })
            })
            .then((res) => {
                if (res.ok) {
                    window.location.reload();
                }
            })
            .catch((err) => console.error(err));
        }

        function deleteTodo(id){
            fetch(`/todos/${id}`,{
                method:"delete",
                headers:{"Content-Type":"application/json"},
                body: JSON.stringify({
                    "_csrf": token
                })
            })
            .then((res) => {
                if (res.ok){
                    window.location.reload();
                }
            })
            .catch((err)=>console.error(err));
        }
    </script>
</head>
<body>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <%- include('header.ejs') %>
            <a href="/signout">Signout</a>
            <form action="/todos" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <div class="flex gap-2 py-4">
                    <div class="flex-auto">
                        <input type="text" name="title" placeholder="What's next?" class="border border-gray-300 text-gray-900 w-full rounded p-2 text-sm" required/>
                    </div>
                    <div class="flex-auto">
                        <input type="date" name="dueDate" class="border border-gray-300 text-gray-900 w-full rounded p-2 text-sm leading-4" required>
                    </div>
                    <div class="flex-none">
                        <button type="submit" class="bg-green-600 text-white px-5 py-1.5 rounded font-medium mr-2 mb-2">Submit</button>
                    </div>
                </div>
            </form>
            <%- include('todo.ejs',{ "container" : "Overdue" , "id" : "count-overdue" , "todos" : Overdue }) %>
            <%- include('todo.ejs',{ "container" : "Due Today" , "id" : "count-due-today" , "todos" : DueToday }) %>
            <%- include('todo.ejs',{ "container" : "Due Later" , "id" : "count-due-later" , "todos" : DueLater }) %>
            <%- include('todo.ejs',{ "container" : "Completed Items" , "id" : "count-completed" , "todos" : Complete }) %>

            <% if(messages && messages.error && messages.error.length> 0) { %>
                <% for(var i=0; i<messages.error.length; i++) { %>
                    <li>
                        <%= messages.error[i] %><br>
                    </li>
                <% } %>
            <% } %>
        </div>
    </div>
    <%- include('footer.ejs') %>
</body>
</html>
